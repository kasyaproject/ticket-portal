  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "example": "username123"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "xml": {
          "name": "LoginRequest"
        }
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "fullname": {
            "type": "string",
            "example": "dika123123"
          },
          "username": {
            "type": "string",
            "example": "dika123123"
          },
          "email": {
            "type": "string",
            "example": "dika123123@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          },
          "confirmPassword": {
            "type": "string",
            "example": "password123"
          }
        },
        "xml": {
          "name": "RegisterRequest"
        }
      },
      "ActivationRequest": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "qwerty1234567890"
          }
        },
        "xml": {
          "name": "ActivationRequest"
        }
      },
      "EventRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Event - name"
          },
          "banner": {
            "type": "string",
            "example": "fileUrl"
          },
          "category": {
            "type": "string",
            "example": "Event - cat"
          },
          "description": {
            "type": "string",
            "example": "Event - desc"
          },
          "startDate": {
            "type": "string",
            "example": "yyyy-mm-dd hh:mm:ss"
          },
          "endDate": {
            "type": "string",
            "example": "yyyy-mm-dd hh:mm:ss"
          },
          "location": {
            "type": "object",
            "properties": {
              "region": {
                "type": "string",
                "example": "region id"
              },
              "coordinate": {
                "type": "array",
                "example": [
                  0,
                  0
                ],
                "items": {
                  "type": "number"
                }
              }
            }
          },
          "isOnline": {
            "type": "boolean",
            "example": false
          },
          "isFetured": {
            "type": "boolean",
            "example": false
          }
        },
        "xml": {
          "name": "EventRequest"
        }
      },
      "CategoryRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Cat - name"
          },
          "description": {
            "type": "string",
            "example": "Cat - desc"
          },
          "icon": {
            "type": "string",
            "example": "Cat - icon"
          }
        },
        "xml": {
          "name": "CategoryRequest"
        }
      },
      "MediaRequest": {
        "type": "object",
        "properties": {
          "fileUrl": {
            "type": "string",
            "example": ""
          }
        },
        "xml": {
          "name": "MediaRequest"
        }
      }
    }
